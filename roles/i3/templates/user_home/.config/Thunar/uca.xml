<?xml encoding="UTF-8" version="1.0"?>
<actions>
<action>
    <icon>utilities-terminal</icon>
    <name>Open Terminal Here</name>
    <unique-id>open-terminal-here</unique-id>
    <command>roxterm --tab --directory=%f</command>
    <description>Opens terminal in selected directory</description>
    <patterns>*</patterns>
    <startup-notify/>
    <directories/>
</action>
<action>
    <icon>text-editor</icon>
    <name>Edit as root</name>
    <unique-id>edit-as-root</unique-id>
    <command>sudo -Ae %f</command>
    <description>Edit a text file as super user</description>
    <patterns>*</patterns>
    <startup-notify/>
    <text-files/>
</action>
</actions>
